{% extends "::layout.html.twig" %}


{% block title %}ObrazkiwbazieBundle:wrap:Blank{% endblock %}

{% block contents %}

    {% set margines=20 %}



<canvas id="Blank" width="{{ entity.size.width+margines*2 }}" height="{{ entity.size.Height+margines*2 }}" >
    Your browser does not support the HTML5 canvas tag.</canvas>


    {#{{ dump(entity) }}#}

<script>


           function Blank()
           {
               var c = document.getElementById("plotno");
               var ctx = c.getContext("2d");
               var img = new Image();
               img.src = '{{ asset(entity.getUploadMinaturkaDir~"/" ~ entity.nazwaObrazka  ) }}';

               ctx.rect(0,{{ margines }},{{ entity.size.width+margines*2 }},{{ entity.size.height }})
               ctx.rect({{ margines }},0,{{ entity.size.width }},{{ entity.size.height+margines*2 }})

               ctx.stroke();


               ctx.drawImage(img, {{ margines }}, {{ margines }}, {{ entity.size.width }}, {{ entity.size.Height }});



               return c;
           }


           window.onload=function(){
               document.getElementById("plotno").innerHTML=Blank();
               document.getElementById("Custom").innerHTML=Custom();
               document.getElementById("Mirror").innerHTML=Mirror();
               document.getElementById("Stretch").innerHTML=Stretch();



           }
</script>
{% endblock %}
